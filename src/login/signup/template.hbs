
<form class="signup__form form-horizontal well" role="form">
  {{#if errors}}
    <div class="alert alert-warning">
      <ul>
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}
  
  <div class="form-group">
    <label class="col-sm-1 control-label" for="name">Name</label>
    <div class="col-sm-11">
      <input id="name" class="form-control" name="name" type="text" placeholder="username">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label" for="studentId">studentId</label>
    <div class="col-sm-11">
      <input id="studentId" class="form-control" name="studentId" type="text" placeholder="studentId">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label" for="password">Password</label>
    <div class="col-sm-11">
      <input id="password" class="form-control" name="password" type="password" placeholder="请输入密码">
    </div>
  </div>

   <div class="form-group">
      <label class="col-sm-1 control-label" for="major">major</label>
      <div class="col-sm-11">
        <input id="major" class="form-control" type="text" name="major" placeholder="专业">
      </div>
   </div>

  <div class="form-group">
      <label class="col-sm-1 control-label" for="className">className</label>
      <div class="col-sm-11">
        <input id="className" class="form-control" type="text" name="className" placeholder="班级名称">
      </div>
   </div>

   <div class="form-group">
      <label class="col-sm-1 control-label" for="className">className</label>
      <div class="col-sm-11">
        <input id="className" class="form-control" type="text" name="className" placeholder="班级名称">
      </div>
   </div>

   <div class="form-group">
      <label class="col-sm-1 control-label" for="email">email</label>
      <div class="col-sm-11">
        <input id="email" class="form-control" type="text" name="email" placeholder="邮箱">
      </div>
   </div>

   <div class="form-group">
      <label class="col-sm-1 control-label" for="tel">tel</label>
      <div class="col-sm-11">
        <input id="tel" class="form-control" type="text" name="tel" placeholder="电话">
      </div>
   </div>

   <div class="form-group">
      <label class="col-sm-1 control-label" for="status">status</label>
      <div class="col-sm-11">
        <input id="status" class="form-control" type="text" name="status" placeholder="">
      </div>
   </div>

   <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
   </div>
</form>



<a href="#login/signin">Go to sign in.</a>