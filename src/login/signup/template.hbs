
<form class="signup__form form-horizontal well" role="form">
  {{#if errors}}
    <div class="alert alert-warning">
      <ul>
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}
  
  <div class="form-group">
    <label class="col-sm-1 control-label" for="name">Name</label>
    <div class="col-sm-11">
      <input id="name" class="form-control" name="name" type="text" placeholder="username">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label" for="group">Group</label>
    <div class="col-sm-11">
      <input id="group" class="form-control" name="group" type="text" placeholder="group">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label" for="password">Password</label>
    <div class="col-sm-11">
      <input id="password" class="form-control" name="password" type="password" placeholder="请输入密码">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
   </div>
</form>

<a href="#login/signin">Go to sign in.</a>